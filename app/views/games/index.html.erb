<h1>Join a Game</h1>

<% @games.each do |game| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
	<div>
		<h1><%= link_to game.name, game_path(game), :method => 'PUT' %></h1>
		<div class="pull-left">
    		<%= link_to 'Edit', edit_game_path(game), :class => 'btn btn-primary' %>
  		</div>
  		<div >
			<%= link_to 'Destroy', game_path(game), :method => :delete, :data => {:confirm => 'Are you sure you want to delete this?'},:class => 'btn btn-danger' %>
		</div>
	</div>
  </div>
<% end %>