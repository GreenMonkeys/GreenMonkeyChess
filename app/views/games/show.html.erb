<div class = 'col-xs-10 col-xs-offset-1'>

	<table id = 'chess'>
		<% @board.each do |y| %>
		<tr class = '<%= @board.index(y) %>' >
			<% y.each do |x| %>
				<% if x.nil? %>
				
					<td class = '<% y.index(x) %>'><%= link_to raw('&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;<p>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</p>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;'), :url =>'#'%></td>
				<% else %>
				<td class = '<% y.index(x) %>'>
					<%= link_to image_tag x.image, :class => 'responsive', :url => '#' %>
				</td>
				<% end %>
			<% end %>
		</tr>
		<% end %>
	</table>

</div>
